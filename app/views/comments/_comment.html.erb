<%= div_for comment do %>
 <p id="notice"><%= notice %></p>
 <p><b><%= comment.name %></b> says</p>
 <p>
 	<b>Posted <%= time_ago_in_words(comment.created_at) %> ago</b><br/>
 	<%= comment.body %>
 </p>
 
 <%= link_to "Delete", [@post,comment], :method => :delete, :confirm=> "Are you sure?"%>
<% end %>